<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x630"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/banner_img_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/sb"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/statusbar_view_height" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/x56"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/ic_qrcode_bg" />

        <include layout="@layout/head_user_info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x210"
        android:layout_marginBottom="@dimen/x40"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x530"
        android:background="@drawable/bg_hump">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vip"
                style="@style/btn_mine"
                android:layout_marginLeft="@dimen/x25"
                android:drawableTop="@drawable/icon_vip"
                android:text="会员" />

            <TextView
                android:id="@+id/tv_store"
                style="@style/btn_mine"
                android:drawableTop="@drawable/icon_shop"
                android:text="店管理" />

            <TextView
                android:id="@+id/tv_partner"
                style="@style/btn_mine"
                android:drawableTop="@drawable/icon_partner"
                android:text="合伙人" />

            <TextView
                android:id="@+id/tv_promotion"
                style="@style/btn_mine"
                android:layout_marginRight="@dimen/x25"
                android:drawableTop="@drawable/icon_80"
                android:text="市场" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/bg_hump">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/x40">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/icon_72" />

                <TextView
                    android:id="@+id/tv_my_bag"
                    style="@style/tv_mine"
                    android:text="我的钱包" />
            </LinearLayout>

            <View
                style="@style/divider_line"
                android:layout_marginBottom="@dimen/x30" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/icon_88" />

                <TextView
                    android:id="@+id/tv_service"
                    style="@style/tv_mine"
                    android:text="业务申请" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/icon_101" />

                <TextView
                    android:id="@+id/tv_my_collect"
                    style="@style/tv_mine"
                    android:text="我的收藏" />
            </LinearLayout>

            <View
                style="@style/divider_line"
                android:layout_marginBottom="@dimen/x30" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/icon_58" />

                <TextView
                    android:id="@+id/tv_my_address"
                    style="@style/tv_mine"
                    android:layout_marginBottom="0.0dip"
                    android:text="地址管理" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_hump"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x40">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_marginBottom="4.0px"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/icon_89" />

        <TextView
            android:id="@+id/tv_download"
            style="@style/tv_mine_no_right"
            android:layout_marginBottom="4.0px"
            android:text="下载" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card4"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_hump"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x40">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_marginBottom="4.0px"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/icon_48" />

        <TextView
            android:id="@+id/tv_setting"
            style="@style/tv_mine_no_right"
            android:layout_marginBottom="4.0px"
            android:text="设置" />
    </LinearLayout>
</RelativeLayout>
